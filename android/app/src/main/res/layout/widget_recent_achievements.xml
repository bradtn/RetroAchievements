<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header -->
    <TextView
        android:id="@+id/header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ðŸ† Recent Achievement"
        android:textColor="#81C784"
        android:textSize="10sp"
        android:textStyle="bold" />

    <!-- Timestamp in header -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="2h ago"
        android:textColor="#888888"
        android:textSize="9sp" />

    <!-- Game Icon (larger, on the left) -->
    <ImageView
        android:id="@+id/game_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@id/header_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="Game Icon" />

    <!-- Achievement Icon (overlapping bottom-right of game icon) -->
    <ImageView
        android:id="@+id/achievement_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/header_label"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/widget_background"
        android:padding="1dp"
        android:contentDescription="Achievement Icon" />

    <!-- Achievement Title -->
    <TextView
        android:id="@+id/achievement_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_label"
        android:layout_toEndOf="@id/achievement_icon"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Achievement Name"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Game Title -->
    <TextView
        android:id="@+id/game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/achievement_title"
        android:layout_toEndOf="@id/achievement_icon"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Game Title"
        android:textColor="#AAAAAA"
        android:textSize="11sp" />

    <!-- Bottom row: Console + Points + Hardcore -->
    <TextView
        android:id="@+id/console_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_title"
        android:layout_toEndOf="@id/achievement_icon"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/chip_console"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="NES"
        android:textColor="#64B5F6"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/points_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_title"
        android:layout_toEndOf="@id/console_chip"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/chip_points"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:text="10 pts"
        android:textColor="#FFD54F"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/hardcore_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_title"
        android:layout_toEndOf="@id/points_chip"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/badge_hardcore"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:text="HC"
        android:textColor="#000000"
        android:textSize="8sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>
